<section class="content">
<div class="row">
  <div class="col-md-12">
    {{#collection-info model}}
      <div class="row">
        <div class="col-xs-offset-1 col-xs-10">
          {{permissions-editor model.permissions onchange=(action 'permissionsUpdated')}}
        </div>
      </div>
    {{/collection-info}}
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header">
        <div class="row">
          <div class="col-xs-2">
            </div>
          <div class="col-xs-8">
            {{input value=queryText type="text" class="form-control" placeholder="Search"}}
          </div>
          <div class="col-xs-2">
            <ul class="pagination pagination-sm no-margin pull-right">
              {{#if hasPrev}}
                <li><a style="cursor: pointer;" {{action 'prevPage'}}>«</a></li>
              {{/if}}
              <li><a>{{page}}/{{totalPages}}</a></li>
              {{#if hasNext}}
                <li><a style="cursor: pointer;" {{action 'nextPage'}}>»</a></li>
              {{/if}}
            </ul>
          </div>
        </div>
        </div>
        <div class="box-body">
          {{#if tableData.isPending}}
            <div style="text-align: center;">
              <i class="fa fa-spinner fa-pulse"></i>
            </div>
          {{else if tableData.isRejected}}
            <div style="text-align: center;">
              Oops, looks like that was an invalid query.
            </div>
          {{else if tableData.length}}
            {{#ember-fancytree data=tableData history="historyClick" edit="editClick"}}
              <colgroup>
                <col width="40%">
                <col width="50%">
                <col width="10%">
              </colgroup>
              <thead>
                <tr>
                  <th>Key</th>
                  <th>Value</th>
                  <th>Type</th>
                </tr>
              </thead>
              <tbody>
              </tbody>
            {{/ember-fancytree}}
          {{else}}
            <div style="text-align: center;">
              {{#if queryText}}
                No results found.
              {{else}}
                Shucks, this collection is empty.
              {{/if}}
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>

{{outlet}}
